<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mediaImageView"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/img"/>

    <VideoView
        android:id="@+id/mediaVideoView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/likeStatusOverlayView"
        android:alpha="0.5"
        android:layout_alignBottom="@id/mediaImageView"
        android:layout_alignStart="@id/mediaImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0b000000"
        android:layout_alignParentStart="false" />

</RelativeLayout>